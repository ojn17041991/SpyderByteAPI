{
  "AllowedHosts": "*",
  "Authentication": {
    "Issuer": "SpyderByteStudios",
    "Audience": "SpyderByteWebApplication",
    "TimeoutMinutes": 60
  },
  "ConnectionStrings": {
    "SbApi": "Data Source=.\\Databases\\sbapi.db"
  },
  "Database": {
    "BackupFileExtension": ".backup",
    "NumberOfHoursToRetainBackup": 8766
  },
  "Encryption": {
    "Argon2": {
      "DegreesOfParallelism": 4,
      "MemorySize": 2048,
      "Iterations": 10
    }
  },
  "FeatureFlags": {
    "AllowAuthenticationRefresh": true,
    "AllowDatabaseBackups": true,
    "AllowDatabaseCleanups": true,
    "AllowWriteOperationsOnNonRestrictedUsers": true,
    "AllowUseOfNonPaginatedEndpoints": true
  },
  "Imgur": {
    "Url": "https://api.imgur.com/",
    "Version": "3"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "Storage": {
    "Containers": {
      "Database": "database"
    },
    "ClientName": "spyderbyte"
  },
  "Versioning": {
    "Supported": [
      {
        "Major": 1,
        "Minor": 3,
        "Patch": 1
      },
      {
        "Major": 1,
        "Minor": 0,
        "Patch": 0
      }
    ]
  }
}